@model UserService.Models.UserModel
@{
    ViewBag.Title = "Home Page";
}

<h1>
    Pasta Presser
</h1>

<div class="flex-container">
    <div>
        Upgrades:
        <div id="upgradeCheese">
            @* <div class="btn btn-default"> *@
            <input type="button" name="UpgradeButton" value="Buy Cheese" class="btn btn-default" />
            <label class="upLab">Cost: <span id="UpgradeCheesePrice">15</span></label>
        </div>
        <div id="upgradeSauce">
            <input type="button" name="UpgradeButton" value="Buy Sauce" class="btn btn-default" />
            <label class="upLab">Cost: <span id="UpgradeSaucePrice">100</span></label>
        </div>
        <div id="upgradePasta">
            <input type="button" name="UpgradeButton" value="Buy Pasta" class="btn btn-default" />
            <label class="upLab">Cost: <span id="UpgradePastaPrice">500</span></label>
        </div>
        <div id="upgradeMeat">
            <input type="button" name="UpgradeButton" value="Buy Meat" class="btn btn-default" />
            <label class="upLab">Cost: <span id="UpgradeMeatPrice">1000</span></label>
        </div>
        <div id="upgradeClick">
            <input type="button" name="UpgradeButton" value="Upgrade Click" class="btn btn-default" />
            <label class="upLab">Cost: <span id="UpgradeClickPrice">50</span></label>
        </div>
    </div>
    <div>
        <input type="hidden" name="p" value="@Model.Password" id="modelPass" />
            <input type="hidden" name="u" value="@Model.UserName" id="modelUsername"/>
        <div id="LiraCount">
            Lira: <span id="number" class="liraCount">@Model.Lira</span>
        </div>
        <img id="trash" src="https://66.media.tumblr.com/c60ebc65486d1c75f1429e10ad10066f/tumblr_mod325UaUQ1rzunsjo1_500.png" class="lasagnaImg" />
        <div id="lpsCount">
            LPS: <span id="lpsNum" class="lpsCount">@Model.LPS</span>
        </div>
        @*<div id="upgradeTier">
            <input type="button" name="UpgradeButton" value="Upgrade Tier" class="btn btn-default" />
            <label class="upLab">Cost: <span id="UpgradeTier">10</span></label>
        </div>*@
    </div>
    <div class="playerInfo">
        <span class="title">Player Info:</span>
        <ul class="nobullet">
            <li>Cheese Count: <span id="cheeseCount">@Model.CheeseCount</span></li>
            <li>Sauce Count: <span id="sauceCount">@Model.SauceCount</span></li>
            <li>Pasta Count: <span id="pastaCount">@Model.PastaCount</span></li>
            <li>Meat Count: <span id="meatCount">@Model.MeatCount</span></li>
            <li>Click Upgrade Level: <span id="clickCount">@Model.ClickUpgrade</span></li>
            @*<li>Tier Level: <span id="tierLevel">@Model.Tier</span></li>*@
        </ul>
    </div>
</div>

<div class="SaveArea">
    <form method="post" action="/Home/Save/" id="saveForm">
        <input type="hidden" name="id" value="@Model.ID" />
        <input type="hidden" name="userName" value="@Model.UserName" />
        <input type="hidden" name="password" value="@Model.Password" />
        <input type="hidden" name="cheeseCount" value="@Model.CheeseCount" id="formCheese" />
        <input type="hidden" name="sauceCount" value="@Model.SauceCount" id="formSauce" />
        <input type="hidden" name="pastaCount" value="@Model.PastaCount" id="formPasta" />
        <input type="hidden" name="meatCount" value="@Model.MeatCount" id="formMeat" />
        <input type="hidden" name="clickUpgradeLevel" value="@Model.ClickUpgrade" id="formClickUpgrade" />
        <input type="hidden" name="lira" value="@Model.Lira" id="formLira" />
        <input type="hidden" name="lps" value="@Model.LPS" id="formLPS" />
        <input type="submit" name="SaveButton" value="Save" class="btn btn-default" id="saveBtn" />
    </form>
</div>
<script src="~/Scripts/Lasanga/LiraControl.js"></script>