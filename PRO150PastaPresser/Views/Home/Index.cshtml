@model PRO150PastaPresser.Models.Italian
@{
    ViewBag.Title = "Home Page";
}

<h1>
    Pasta Presser
</h1>

<div class="flex-container">
    <div>
        Upgrades:
        <div id="upgradeCheese">
            <input type="button" name="UpgradeButton" value="Buy Cheese" class="upBtn"/>
        </div>
        <div id="upgradeSauce">
            <input type="button" name="UpgradeButton" value="Buy Sauce" class="upBtn"/>
        </div>
        <div id="upgradePasta">
            <input type="button" name="UpgradeButton" value="Buy Pasta" class="upBtn"/>
        </div>
        <div id="upgradeMeat">
            <input type="button" name="UpgradeButton" value="Buy Meat" class="upBtn"/>
        </div>
    </div>
    <div>
        @*<input type="hidden" name="p" value="@Model.Password" />
        <input type="hidden" name="u" value="@Model.Username" />*@
        <div id="LiraCount">
            Lira: <p id="number">@Model.Lira</p>
        </div>
        <img  id="trash" src="https://66.media.tumblr.com/c60ebc65486d1c75f1429e10ad10066f/tumblr_mod325UaUQ1rzunsjo1_500.png" class="lasagnaImg" />
    </div>
    <div class="playerInfo">
        <span class="title">Player Info:</span>
        <ul class="nobullet">
            <li id="cheeseCount">Cheese Count: @Model.CheeseCount</li>
            <li id="sauceCount">Sauce Count: @Model.SauceCount</li>
            <li id="pastaCount">Pasta Count: @Model.PastaCount</li>
            <li id="meatCount">Meat Count: @Model.MeatCount</li>
            <li id="clickCount">Click Upgrade Level: @Model.ClickUpgrade</li>
        </ul>
    </div>
</div>
<script src="~/Scripts/Lasanga/LiraControl.js"></script>